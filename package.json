{
  "name": "pom-opener",
  "version": "2019.1.6",
  "private": true,
  "main": "src/electron-main.js",
  "homepage": "./",
  "dependencies": {
    "copy-to-clipboard": "^3.2.0",
    "cron": "^1.7.2",
    "electron-is-dev": "^1.1.0",
    "glob": "^7.1.5",
    "hotkeys-js": "^3.7.2",
    "lodash": "^4.17.15",
    "nedb": "^1.8.0",
    "prop-types": "^15.7.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-dropdown": "^1.6.4",
    "react-redux": "^6.0.1",
    "react-scripts": "2.1.5",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "sort-on": "^3.0.0",
    "wait-on": "^3.3.0",
    "xml2js": "^0.4.22"
  },
  "scripts": {
    "start": "cross-env BROWSER=none concurrently --kill-others \"npm run react-start\" \"wait-on http://localhost:3000 && npm run electron\"",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron . --no-hide-on-blur",
    "electron-start": "node src/electron-wait-react",
    "react-start": "react-scripts start",
    "pack": "build --dir",
    "dist": "npm run build && build",
    "postinstall": "electron-builder install-app-deps"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "concurrently": "^4.1.2",
    "electron": "^4.2.12",
    "electron-builder": "^20.44.4",
    "typescript": "^3.6.4"
  },
  "build": {
    "appId": "systems.stan.pom-opener",
    "win": {
      "target": "nsis",
      "icon": "src/app/assets/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "installerHeaderIcon": "src/app/assets/icon.ico",
      "installerIcon": "src/app/assets/icon.ico",
      "createDesktopShortcut": false
    },
    "extends": null,
    "directories": {
      "buildResources": "public"
    }
  }
}
